#!/usr/bin/env gnuplot

set term pdf font ",22"
set output "dahu_mpi_bycore_bw.pdf"

set xlabel "Message size (B)"
set ylabel "Throughput (Gb/s)"
#set logscale x
set xrange [:1e7]
set yrange [0:250]
set xtics rotate
set format x "%2.0t.10^{%L}"

plot "mpi_bycore_get.dat" u 1:($2=="inf"?(8*$1/$3):$2) w lp lw 3 t "Get", \
     "mpi_bycore_put.dat" u 1:($2=="inf"?(8*$1/$3):$2) w lp lw 3 t "Put"